<div class="col-8">
    <div class="row col-12">
        {{#each goodsList}}
        <div class="col-6 pt-5">
            <div class="card">
                <div class="card-body">
                    <img class="card-img-top mb-3" src="{{img}}" alt="Product photo">
                    {{#if isHot}}
                    <span class="badge text-bg-warning rounded-pill text-uppercase text-light me-2 mb-3">
                        Hot!
                    </span>
                    {{/if}}
                    {{#if isNew}}
                    <span class="badge text-bg-primary rounded-pill">
                        Нове
                    </span>
                    {{/if}}
                    {{#if isFast}}
                    <div class="btn btn-success mb-3">Швидка доставка</div>
                    {{/if}}
                    {{#if isFree}}
                    <div class="btn btn-secondary">Безкоштовна доставка</div>
                    {{/if}}
                    <h5 class="mt-3">{{name}}</h5>
                    {{#with review}}
                    <div>{{amount}} {{text}}</div>
                    {{/with}}
                    <h4>{{price}}</h4>
                    <div>{{delivery}}</div>
                    <div>
                        {{#each buttons}}
                        {{#if isPrimary}}
                        <a href="{{link}}" class="btn btn-primary mt-3">{{text}}</a>
                        {{/if}}
                        {{#if isSecondary}}
                        <a href="{{link}}" class="btn btn-secondary mt-3">{{text}}</a>
                        {{/if}}
                        {{/each}}
                    </div>
                    <div class="mt-3 ">
                        {{#each characteristics}}
                        <div class="mt-1">
                            • {{title}}: {{value}}
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>