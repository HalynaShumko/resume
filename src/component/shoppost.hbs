<div>
    {{#with newsOtherBlock}}
    <h2 class="text-center">{{title}}</h2>
    <div class="row g-2 col-12 ms-3">
        {{#each cards}}
        <div class="col-3 py-3">
            <div class="card text-bg-dark">
                <h4 class="card-title p-3">{{title}}
                    {{#if idNew}}
                    <span class="badge text-bg-success rounded-pill">
                        Нове
                    </span>
                    {{/if}}
                    {{#if isTop}}
                    <span class="badge text-bg-danger rounded-pill">Топ</span>
                    {{/if}}
                </h4>
                <hr class="text-light">
                <p class="card-body">{{description}}</p>
            </div>
        </div>
        {{/each}}
    </div>
    {{/with}}
</div>