<hr>

<main class="p-5">
    <div class="row g-3">
        <div class="col-12">
            <div class="row">
                <div class="col-8">
                    {{#with contacts_data}}
                    <h1 class="p-3">{{header}}</h1>

                    <h2 class="p-3">{{title}}</h2>
                    <div>
                        {{#each buttons}}
                        {{#if isPrimary}}
                        <button class="btn btn-warning m-2">{{text}}</button>
                        {{else}}
                        <button class="btn btn-outline-warning">{{text}}</button>
                        {{/if}}
                        {{/each}}
                    </div>
                    <div class="row">
                        {{#with form}}
                        <div class="col-12">
                            <div class="row g-3">
                                {{#with input}}
                                <div class="col-6">
                                    {{#with surname}}
                                    <label class="form-label">{{label}}</label>
                                    <input type="text" class="form-control" placeholder="{{placeholder}}">
                                    <div class=" form-text">{{caption}}</div>
                                    {{/with}}
                                </div>
                                <div class="col-6">
                                    {{#with name}}
                                    <label class="form-label">{{label}}</label>
                                    <input type="text" class="form-control" placeholder="{{placeholder}}">
                                    <div class="form-text">{{caption}}</div>
                                    {{/with}}
                                </div>
                                <div class="col-6">
                                    {{#with phone}}
                                    <label class="form-label">{{label}}</label>
                                    <input type="text" class="form-control" placeholder="{{placeholder}}">
                                    <div class="form-text">{{caption}}</div>
                                    {{/with}}
                                </div>
                                <div class="col-6">
                                    {{#with email}}
                                    <label class="form-label">{{label}}</label>
                                    <input type="text" class="form-control" placeholder="{{placeholder}}">
                                    <div class="form-text">{{caption}}</div>
                                    {{/with}}
                                </div>
                                {{/with}}
                            </div>
                        </div>

                        <div>
                            <hr>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="row">
                                    <div class="col-12 g-2">
                                        {{#each switch}}
                                        <div class="form-check form-switch m-3">
                                            <label class="form-check-label">{{text}}</label>
                                            {{#if isActive}}
                                            <input type="checkbox" class="form-check-input" role="switch"
                                                id="flexSwitchCheckChecked" checked>
                                            {{else}}
                                            <input type="checkbox" class="form-check-input" role="switch"
                                                id="flexSwitchCheckDefault">
                                            {{/if}}
                                        </div>
                                        {{/each}}
                                        <hr>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/with}}
                    </div>
                    {{/with}}
                </div>

                <div class="col-4 p-5">
                    <div class="card">
                        <div class="card-body">
                            {{#each action_block}}
                            {{#if isPrimary}}
                            <button class="btn btn-success m-1">{{text}}</button>
                            {{/if}}
                            {{#if isDanger}}
                            <button class="btn btn-danger m-1">{{text}}</button>
                            {{/if}}
                            {{#if isInfo}}
                            <button class="btn btn-info m-1">{{text}}</button>
                            {{/if}}
                            {{/each}}
                        </div>
                    </div>
                    <div class="card my-3">
                        <div class="card-body">
                            {{#with total}}
                            <h3>{{title}}</h3>
                            {{#each item_list}}
                            <div>{{name}}: {{price}}</div>
                            {{/each}}
                            <hr>
                            {{#each additional_info}}
                            <div>{{text}}: {{value}}</div>
                            {{/each}}
                            <hr>
                            {{#with total_price}}
                            <div>{{text}}: {{value}}</div>
                            {{/with}}

                            {{#each button}}
                            {{#if isPrimary}}
                            <button class="btn btn-primary m-1">{{text}}</button>
                            {{/if}}
                            {{#if isOutline}}
                            <button class="btn btn-outline-primary m-1">{{text}}</button>
                            {{/if}}
                            {{/each}}
                            {{/with}}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-8">
                <div class="row">
                    <div class="col-12">
                        {{#with delivery}}
                        <div class="row g-3">
                            <h2 class="ms-5">{{title}}</h2>
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        {{#each select}}
                                        <div class="col-6 p-3">
                                            <label class="form-label">{{label}}</label>
                                            <select class="form-select">
                                                <option selected>{{placeholder}}</option>
                                                {{#each options}}
                                                <option value="{{value}}">{{text}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>

                            <div class="form-check p-2">
                                {{#each delivery_type}}
                                <div class="form-check my-1">
                                    <input class="form-check-input" type="radio" name="delivery_type" type="radio">
                                    <label class="form-check-label d-flex justify-content-between" for="flexRadio">
                                        <div>{{type}}</div>
                                        <p>{{value}}</p>
                                    </label>
                                </div>
                                {{/each}}
                            </div>

                            <hr>

                            <div class="col-12 p-3">
                                <h2>{{title}}</h2>
                                {{#each payment}}
                                <div class="form-check p-2">
                                    <label class="form-check-label">{{type}}</label>
                                    <input name="payment" type="radio" class="form-check-input">
                                    <div class="form-text">{{description}}</div>
                                </div>
                                {{/each}}
                            </div>

                            <hr>

                            {{#with contact}}
                            <h2>{{title}}</h2>
                            <div class="col-6">
                                {{#with surname}}
                                <label class="form-label">{{label}}</label>
                                <input type="text" class="form-control" placeholder="{{placeholder}}">
                                <div class=" form-text">{{caption}}</div>
                                {{/with}}
                            </div>
                            <div class="col-6">
                                {{#with name}}
                                <label class="form-label">{{label}}</label>
                                <input type="text" class="form-control" placeholder="{{placeholder}}">
                                <div class="form-text">{{caption}}</div>
                                {{/with}}
                            </div>
                            <div class="col-6">
                                {{#with phone}}
                                <label class="form-label">{{label}}</label>
                                <input type="text" class="form-control" placeholder="{{placeholder}}">
                                <div class="form-text">{{caption}}</div>
                                {{/with}}
                            </div>
                            <div class="col-6">
                                {{#with email}}
                                <label class="form-label">{{label}}</label>
                                <input type="text" class="form-control" placeholder="{{placeholder}}">
                                <div class="form-text">{{caption}}</div>
                                {{/with}}
                            </div>
                            {{/with}}

                            <hr>

                            <div class="col-12">
                                {{#with coment}}
                                <label class="form-label">{{label}}</label>
                                <input type="text" class="form-control" placeholder="{{placeholder}}">
                                {{/with}}
                            </div>
                        </div>
                        {{/with}}

                        <hr>

                        <div class="col-12">
                            {{#with coupon}}
                            <h2>{{title}}</h2>
                            {{#with select}}

                            {{#with availabel_coupon}}
                            <label class="form-label">{{label}}</label>
                            <select class="form-select p-3">
                                <option selected>{{placeholder}}</option>
                                {{#each options}}
                                <option value="{{value}}">{{text}}</option>
                                {{/each}}
                            </select>
                            {{/with}}

                            {{#with friend_coupon}}
                            <label class="form-label">{{label}}</label>
                            <div>
                                <select class="form-select p-0 ps-3 my-2">
                                    <option selected>{{placeholder}}</option>
                                    {{#each options}}
                                    <option value="{{value}}">{{text}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            {{/with}}
                            {{/with}}

                            {{#with add}}
                            {{#with friend}}
                            <label class="form-label">{{label}}</label>
                            <div>
                                <input type="text" class="form-control p-3" placeholder="{{placeholder}}">
                            </div>
                            <div class="form-text">{{caption}}</div>
                            {{/with}}
                            {{#with colleague}}
                            <label class="form-label">{{label}}</label>
                            <div>
                                <input type="text" class="form-control p-0 ps-3 my-2" placeholder="{{placeholder}}">
                            </div>
                            <div class="form-text">{{caption}}</div>
                            {{/with}}
                            {{/with}}
                            {{/with}}
                        </div>

                        <hr>
                        <div>
                            {{#with quiz}}

                            <h2>{{title}}</h2>
                            {{#with preference}}
                            <h5>{{title}}</h5>
                            {{#each options}}
                            <div class="form-check p-2">
                                <label class="form-check-label">{{this}}</label>
                                <input name="options" type="radio" class="form-check-input">
                            </div>
                            {{/each}}
                            {{/with}}
                            {{#with your_expirience}}
                            <div class="py-3">
                                <label class="form-label">{{label}}</label>
                                <input class="form-control">
                            </div>
                            {{/with}}
                            {{#with purchase_frequency}}
                            <label class="form-label">{{label}}</label>
                            <select class="form-select">
                                <option selected>{{placeholder}}</option>
                                {{#each options}}
                                <option value="{{value}}">{{text}}</option>
                                {{/each}}
                            </select>
                            {{/with}}
                            {{#with factors}}
                            <h5 class="py-3">{{title}}</h5>
                            {{#each options}}
                            <div class="form-check py-2">
                                <label class="form-check-label">{{this}}</label>
                                <input name="options" type="checkbox" class="form-check-input">
                            </div>
                            {{/each}}
                            {{/with}}

                            {{/with}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<div>
    <hr>
</div>