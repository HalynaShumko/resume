<main class="p-5">
    <div class="row g-3">
        <div class="col-12">

            <div class="row">
                {{#with formBlock}}
                <div class="col-8 p-3">
                    <h2>{{header}}</h2>
                    {{#with rating}}
                    <div>{{title}}: {{value}}</div>
                    {{/with}}
                    <div class="py-3">
                        {{#with actionBlock}}
                        <div>
                            <ul class="nav nav-tabs">
                                {{#each tabs}}
                                <li class="nav-item">
                                    {{#if isActive}}
                                    <a class="nav-link active">{{text}}</a>
                                    {{else}}
                                    <a class="nav-link">{{text}}</a>
                                    {{/if}}
                                </li>
                                {{/each}}
                            </ul>
                        </div>

                        <div class="my-5">
                            <hr>
                        </div>

                        <div>
                            <div class="alert alert-light">
                                <div class="row">
                                    {{#with field}}
                                    <div class="col-8">{{placeholder}}</div>
                                    <div class="col-4">
                                        {{#with button}}
                                        <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                                        {{/with}}
                                    </div>
                                    {{/with}}
                                </div>
                            </div>
                        </div>

                        <div class="my-5">
                            <hr>
                        </div>

                        {{/with}}
                    </div>
                    <div>
                        {{#with feedbackBlock}}
                        <h2 class="py-3">{{title}}</h2>
                        <div class="row">
                            {{#each buttons}}
                            <div class="col-4">
                                {{#if isWarning}}
                                <a href="{{link}}" class="btn btn-warning">{{text}}</a>
                                {{/if}}
                                {{#if isSuccess}}
                                <a href="{{link}}" class="btn btn-success">{{text}}</a>
                                {{/if}}
                                {{#if isDanger}}
                                <a href="{{link}}" class="btn btn-danger">{{text}}</a>
                                {{/if}}
                            </div>
                            {{/each}}
                        </div>
                        {{/with}}
                    </div>
                </div>

                <div class="col-4">
                    {{#with goodsInfo}}
                    <div class="card">
                        <div class="card-body">
                            <img class="card-img-cap" src="{{photo}}" alt="Product photo">
                        </div>
                        <h5 class="p-3">{{name}}</h5>
                    </div>
                    <div class="py-3">
                        <div class="card">
                            <div class="card-body">
                                <h4>{{price}}</h4>
                                <div class="py-2">{{text}}</div>
                                <div class="row">
                                    {{#each buttons}}
                                    <div class="col-12 py-1">
                                        {{#if isPrimary}}
                                        <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                                        {{/if}}
                                        {{#if isSecondary}}
                                        <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                                        {{/if}}
                                    </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            {{#with seller}}
                            {{title}}:
                            <b>{{value}}</b>
                            {{/with}}
                        </div>
                    </div>

                    {{/with}}
                </div>
                {{/with}}
            </div>

            <div class="my-5">
                <hr>
            </div>

            <div class="row">
                <div class="col-12">
                    {{#each reviewList}}
                    <div class="card m-5">
                        <div class="card-body">
                            <div class="card m-3">
                                <div class="card-body">
                                    <div class="card-title">
                                        {{#with title}}
                                        <h5>{{userName}}</h5>
                                        <div>{{caption}}</div>
                                        <div>{{date}}</div>
                                        {{/with}}
                                    </div>


                                    {{#with reviewBody}}
                                    {{#with saller}}
                                    <div>{{title}}: <b>{{value}}</b></div>
                                    {{/with}}
                                    {{/with}}
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>







        </div>
    </div>
</main>